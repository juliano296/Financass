<!DOCTYPE html>
<html>
<head>
    <!--PAGINA MESTRA-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Bem vindo(a)!!</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" /> <!--REFERÊNCIANDO A BIBLIOTECA CSS DO BOOTSTRAP-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div>
        <img src="~/img/background-wallpaper2-pim.jpg" id="imagem" /> <!--coloque sua imagem-->
    </div>
    <!--INICO MENU TOPO DO SITE-->
    <div class="navbar navbar-default" id="topo">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" id="slv" href="~/">Real Deal Finanças!!</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul id="menu" class="nav navbar-nav">
                    <li>@Html.ActionLink("Pagina Inicial", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contato", "Home")</li>
                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                </ul>
            </div>
            <ul class="pager">
                <!--<li id="btne" class="previous"><a href="~/">Voltar</a></li> -->
                <li id="btnd" class="next"><a href="#">Proxima</a></li>
            </ul>
        </div>

    </div>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>Real Deal Finanças &copy; @DateTime.Now.Year - Todos os direitos reservados</p>
            </div>
        </div>
    </footer>

    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false) <!--DEFINE SEÇÕES, ONDE DETERMINADO CODIGO SERÁ RENDERIZADO.. SEÇÃO ONDE OS SCRIPTS SERÃO RENDERIZADOS ...-->
</body>
</html>